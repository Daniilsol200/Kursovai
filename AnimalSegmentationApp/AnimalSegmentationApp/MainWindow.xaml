<Window x:Class="AnimalSegmentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animal Segmentation" Height="600" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель управления -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.ColumnSpan="3">
            <Button x:Name="LoadImageButton" Content="Load Image" Click="LoadImageButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="SegmentButton" Content="Segment" Click="SegmentButton_Click" IsEnabled="False" Margin="0,0,10,0"/>
            <TextBlock Text="K:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="KTextBox" Width="50" Text="3" Margin="0,0,10,0"/>
            <TextBlock Text="Max Iterations:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="MaxIterationsTextBox" Width="50" Text="10" Margin="0,0,10,0"/>
            <CheckBox x:Name="UseCustomCentroidsCheckBox" Content="Use Custom Centroids" VerticalAlignment="Center" Checked="UseCustomCentroidsCheckBox_Checked" Unchecked="UseCustomCentroidsCheckBox_Unchecked"/>
        </StackPanel>

        <!-- Панель для ввода центроидов -->
        <StackPanel x:Name="CentroidsStackPanel" Grid.Row="1" Grid.ColumnSpan="3" Margin="10">
            <TextBlock Text="Custom Centroids (R,G,B):" Margin="0,0,0,5"/>
            <StackPanel x:Name="CentroidsPanel" Orientation="Vertical"/>
        </StackPanel>

        <!-- Оригинальное изображение -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
            <TextBlock Text="Original Image" HorizontalAlignment="Center"/>
            <Image x:Name="OriginalImage" Stretch="Uniform" MaxHeight="300"/>
        </StackPanel>

        <!-- Результат CustomKMeans -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
            <TextBlock Text="Custom K-Means Result" HorizontalAlignment="Center"/>
            <Image x:Name="CustomSegmentedImage" Stretch="Uniform" MaxHeight="300"/>
        </StackPanel>

        <!-- Результат AccordKMeans -->
        <StackPanel Grid.Row="2" Grid.Column="2" Margin="10">
            <TextBlock Text="Accord K-Means Result" HorizontalAlignment="Center"/>
            <Image x:Name="AccordSegmentedImage" Stretch="Uniform" MaxHeight="300"/>
        </StackPanel>

        <!-- Время обработки -->
        <StackPanel Grid.Row="3" Grid.Column="0" Margin="10">
            <TextBlock x:Name="OriginalTimeText" Text="Processing Time: N/A" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10">
            <TextBlock x:Name="CustomTimeText" Text="Processing Time: N/A" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="2" Margin="10">
            <TextBlock x:Name="AccordTimeText" Text="Processing Time: N/A" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Оценка качества -->
        <StackPanel Grid.Row="4" Grid.Column="0" Margin="10">
            <TextBlock x:Name="OriginalQualityText" Text="Quality Score: N/A" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="1" Margin="10">
            <TextBlock x:Name="CustomQualityText" Text="Quality Score: N/A" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="2" Margin="10">
            <TextBlock x:Name="AccordQualityText" Text="Quality Score: N/A" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>